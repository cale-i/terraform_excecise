[
    {
        "name": "${container_name}",
        "image": "${ecr_repository}",
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "${container_name}",
                "awslogs-group": "/ecs/${container_name}"
            }
        },
        "portMappings": [
            {
                "protocol": "tcp",
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "environment": [
            {
                "name": "POSTGRES_HOST",
                "value": "${postgres_host}"
            },
            {
                "name": "POSTGRES_USER",
                "value": "${postgres_user}"
            },
            {
                "name": "POSTGRES_PASSWORD",
                "value": "${postgres_password}"
            },
            {
                "name": "POSTGRES_DB",
                "value": "${postgres_db}"
            }
        ]
    }
]