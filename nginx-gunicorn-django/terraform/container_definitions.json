[
    {
        "name": "${container_name}",
        "image": "${ecr_repository}",
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "${container_name}",
                "awslogs-group": "/ecs/${container_name}"
            }
        },
        "portMappings": [
            {
                "protocol": "tcp",
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "environment": [
            {
                "name": "POSTGRES_HOST",
                "value": "${postgres_host}"
            }
        ],
        "secrets": [
            {
                "name": "POSTGRES_USER",
                "valueFrom": "/db/user"
            },
            {
                "name": "POSTGRES_PASSWORD",
                "valueFrom": "/db/password"
            },
            {
                "name": "POSTGRES_NAME",
                "valueFrom": "/db/name"
            }
        ],
        "command": ["/usr/bin/env"]
    }
]